
<h1>Listing Bail Codes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Abbreviation</th>
      <th>Status</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bail_codes.each do |bail_code| %>
      <tr>
        <td><%= bail_code.description %></td>
        <td><%= bail_code.abbreviation %></td>
        <td><%= bail_code.status %></td>
        <td><%= bail_code.weight %></td>
        <td><%= link_to 'Show', bail_code %></td>
        <td><%= link_to 'Edit', edit_bail_code_path(bail_code) %></td>
        <td><%= link_to 'Destroy', bail_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bail Code', new_bail_code_path %>

