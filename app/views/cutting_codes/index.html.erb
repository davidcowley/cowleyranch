<h1>Listing Cutting Codes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Abbreviation</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cutting_codes.each do |cutting_code| %>
      <tr>
        <td><%= cutting_code.description %></td>
        <td><%= cutting_code.abbreviation %></td>
        <td><%= cutting_code.status %></td>
        <td><%= link_to 'Show', cutting_code %></td>
        <td><%= link_to 'Edit', edit_cutting_code_path(cutting_code) %></td>
        <td><%= link_to 'Destroy', cutting_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

